<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <title>Login</title>
    <link rel="stylesheet" href="/css/style.css" />
  </head>
  <body>
    <nav class="navbar">
      <div class="nav-logo">Advanced Research Inventory</div>
      <div class="nav-links">
        <!-- If you want a link to signup -->
        <a href="/signup" class="nav-item nav-link">Sign Up</a>
      </div>
    </nav>

    <main class="container">
      <section class="login-container">
        <h1>Login</h1>
        <% if (error) { %>
          <p class="error"><%= error %></p>
        <% } %>
        <form action="/login" method="post" class="login-form">
          <!-- Single field for username OR email -->
          <div class="form-group">
            <label>Email or Username</label>
            <input
              type="text"
              name="usernameOrEmail"
              required
            />
          </div>
          <div class="form-group">
            <label>Password</label>
            <input
              type="password"
              name="password"
              required
            />
          </div>
          <button type="submit" class="btn btn-primary">
            Login
          </button>
        </form>
      </section>
    </main>
  </body>
</html>
