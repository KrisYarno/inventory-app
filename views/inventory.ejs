<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1.0"
    />
    <title>Inventory App | Main Page</title>
    <link
      href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="/css/style.css" />
  </head>
  <body>
    <nav class="navbar">
      <div class="nav-logo">Inventory Tracker</div>
      <div class="nav-links">
        <a href="/inventory" class="nav-item nav-link">Main Page</a>
        <% if (user.isAdmin) { %>
          <a href="/admin" class="nav-item nav-link">Admin</a>
        <% } %>
        <a href="/logout" class="nav-item nav-link">Logout</a>
      </div>
    </nav>

    <main class="container inventory-page">
      <!-- If there's a successMessage, display it in a nice box -->
      <% if (successMessage && successMessage.length > 0) { %>
        <div class="alert alert-success">
          <%= successMessage[0] %>
        </div>
      <% } %>

      <h1 class="page-title">Adjust Inventory</h1>
      <form
        action="/inventory/update"
        method="POST"
        id="inventory-form"
        class="inventory-form"
      >
        <div class="table-wrapper">
          <table>
            <thead>
              <tr>
                <th>Product Name</th>
                <th>Shipped</th>
                <th>Quantity</th>
                <th>Stocked</th>
              </tr>
            </thead>
            <tbody>
              <% products.forEach(product => { %>
              <tr>
                <td><%= product.name %></td>
                <td>
                  <button
                    type="button"
                    class="btn btn-decrement decrement-btn"
                    data-productid="<%= product.id %>"
                  >
                    -
                  </button>
                </td>
                <td>
                  <input
                    type="number"
                    name="quantityChange"
                    data-productid="<%= product.id %>"
                    value="0"
                    class="qty-input"
                  />
                  <input
                    type="hidden"
                    name="productId"
                    value="<%= product.id %>"
                  />
                </td>
                <td>
                  <button
                    type="button"
                    class="btn btn-increment increment-btn"
                    data-productid="<%= product.id %>"
                  >
                    +
                  </button>
                </td>
              </tr>
              <% }) %>
            </tbody>
          </table>
        </div>
        <button
          type="submit"
          class="btn btn-primary save-changes-btn"
        >
          Save Changes to Inventory
        </button>
      </form>
    </main>

    <script src="/js/client.js"></script>
  </body>
</html>
