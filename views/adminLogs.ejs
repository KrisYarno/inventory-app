<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Inventory Logs - Admin</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>

     <nav class="navbar navbar-expand-lg navbar-dark bg-dark mb-4">
        <div class="container-fluid">
            <a class="navbar-brand" href="/inventory">Inventory App</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="/inventory">Inventory Adjust</a>
                    </li>
                    <% if (user && user.isAdmin) { %>
                        <li class="nav-item">
                            <a class="nav-link" href="/admin">Admin Panel</a>
                        </li>
                         <li class="nav-item">
                            <a class="nav-link active" aria-current="page" href="/admin/logs">View Logs</a>
                        </li>
                    <% } %>
                    <li class="nav-item">
                        <a class="nav-link" href="/user/settings">My Account</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/logout">Logout</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container">
        <h1 class="text-center mb-4">Inventory Change Log</h1>

        <% if (logs && logs.length > 0) { %>
            <div class="table-responsive">
                <table class="table table-striped table-hover table-bordered">
                     <thead class="table-light">
                        <tr>
                            <th>Timestamp</th>
                            <th>Product Name</th>
                            <th>User</th>
                            <th class="text-end">Change (Delta)</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% logs.forEach(log => { %>
                            <tr>
                                <td><%= new Date(log.changeTime).toLocaleString() %></td>
                                <td><%= log.productName %></td>
                                <td><%= log.changedBy %></td>
                                <td class="text-end <%= log.delta > 0 ? 'text-success' : (log.delta < 0 ? 'text-danger' : '') %>">
                                    <%= log.delta > 0 ? '+' : '' %><%= log.delta %>
                                </td>
                            </tr>
                        <% }); %>
                    </tbody>
                </table>
            </div>
            <% } else { %>
            <p class="text-center">No inventory change logs found.</p>
        <% } %>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>
</html>